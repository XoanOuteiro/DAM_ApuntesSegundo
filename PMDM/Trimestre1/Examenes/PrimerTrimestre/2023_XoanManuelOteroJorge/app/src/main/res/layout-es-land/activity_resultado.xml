<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Resultado"
    android:background="@color/bordeYTitulo"
    android:padding="@dimen/grosor_borde"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/interior"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imcResult"
            android:text=""
            android:textSize="@dimen/tamanhoLetra"
            />

        <TextView
            android:layout_marginLeft="30dp"
            android:paddingLeft="100dp"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:id="@+id/imcResultIMG"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/tamanhoLetra"
            android:layout_marginLeft="30dp"
            android:id="@+id/showResText"/>

    </LinearLayout>

</LinearLayout>