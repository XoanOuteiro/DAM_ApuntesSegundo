<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_MasInfo"
    android:background="@color/bordeYTitulo"
    android:padding="@dimen/grosor_borde"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/interior"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/imc"
            android:textSize="@dimen/tamanhoLetra"
            android:paddingBottom="@dimen/grosor_borde"/>

        <RadioGroup
            android:id="@+id/rbtngMasInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="40dp">

            <RadioButton
                android:id="@+id/rbtnWiki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wiki_text"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbtnOMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OMS Madrid -\n 915555555"/>

        </RadioGroup>

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:onClick="masInfoClicked"/>

        <Button
            android:id="@+id/btnVolverAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volver_atras"
            android:onClick="masInfoClicked"/>

    </LinearLayout>

</LinearLayout>